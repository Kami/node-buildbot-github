#!/usr/bin/env node

var util = require('util');

var argv = require('optimist');

var run = require('../lib/run');

var argv = argv.usage('Usage: $0 --config [config.json]')
                .demand(['config'])
                .argv;

try {
  run.run(argv.config);
}
catch (err) {
  util.print(err.message);

  if (err.stack) {
    util.print(err.stack);
  }

  process.exit(1);
}
